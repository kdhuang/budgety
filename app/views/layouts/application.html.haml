!!!
%html
    %head
        %title Budgety
        = stylesheet_link_tag "application", :media => "all"
        = stylesheet_link_tag "bootstrap", :media => "all"
        = stylesheet_link_tag "bootstrap-responsive", :media => "all"
        = stylesheet_link_tag "bootstrap-responsive.min", :media => "all"
        = stylesheet_link_tag "bootstrap.min", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags

    %body
        - if flash[:failed_login]
            .alert.alert-danger.message
                %a.close{"data-dismiss" => "alert", :style => "font-family: helvetica neue, arial;"} x
                = flash[:failed_login]
        .container
            .col-md-2
            .col-md-8
                .container
                    .page-header
                        .text-right
                            - unless session[:name].nil?
                                / deprecated - allows manual recalculation of budget on home page. replaced by auto recalculation upon each page load
                                /.btn
                                /    = button_to "reset budget", "/b/reset", :class => "btn"
                                .btn
                                    = button_to "update budget", "/b/update", :class => "btn", :method => :get
                                .btn 
                                    = button_to "Log out", "/logout", :class => "btn"

                    .span5            
                        = yield
            .col-md-2