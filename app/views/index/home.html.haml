.h1
    = "$" + number_with_precision(@current_budget, precision: 2)
%br
= link_to "update budget", "/b/update"
%br
= link_to "new transaction", "/t/new"
%br
= link_to "edit transaction", "/t/edit"
%br
= link_to "show all", "/t/show"

%table.table.table-striped.table-hover
    %thead
        %tr 
            %th Name
            %th Description
            %th Amount
            %th Date
            %th{:style => "width: 50px"}
            %th{:style => "width: 50px"}
    %tbody
        - @current_month_transactions.each do |c|
            %tr
                %td #{c.name}
                %td #{c.description}
                %td $ #{number_with_precision(c.amount, precision: 2)}
                %td #{c.date.to_formatted_s(:long)}
                %td edit
                %td delete
