.h1{:style => "font-size:82px; text-align:center;"}
    = "Budgety"

.login-pos
    .well.login
        = form_tag({:controller => "user", :action => "login"},:method => "post") do
            = label "name", "Name:"
            = text_field_tag "name", ""
            %br
            = label "password", "Password:"
            = password_field_tag "password", ""
            %br
            %button.btn.btn-primary{:type => "submit", :style => "margin-top:15px;"} Login